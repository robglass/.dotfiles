#!/usr/bin/env zsh
export STOW_FOLDERS="bin,nvim,tmux,personal,zsh,skhd"

addToPath() {
                vim.keymap.set("n", "<leader>rn", vim.diagnostic.goto_next, { buffer = bufnr })
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}
